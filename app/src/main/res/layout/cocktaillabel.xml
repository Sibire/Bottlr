<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="6sp">

    <Button
        android:id="@+id/cocktailsinglebutton"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:elevation="0dp"
        app:cornerRadius="10dp" />

    <ImageView
        android:id="@+id/imageViewCocktail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="3dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_weight="1"
        android:elevation="3dp"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/textViewCocktailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exodemibold"
            android:text="Cocktail Name"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base"
            android:textColor="@color/black"
            android:fontFamily="@font/nunitosansregular"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
